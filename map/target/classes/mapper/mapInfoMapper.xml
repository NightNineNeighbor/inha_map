<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapInfoMapper">
	<select id="test" resultType="string">
		select id from test;
	</select>

	<insert id="insertGraphAndNodes" parameterType="mapInfo" >
		insert into map_info_table(id, graph, nodes, selectable_nodes)
		values(#{id}, #{graph}, #{nodes}, #{selectableNodes})
	</insert>
	
	<select id="readGraphAndNodes" parameterType="string" resultType="mapInfo">
		select id, nodes, graph, selectable_nodes selectableNodes from map_info_table where id=#{id}
	</select>
	
	<select id="getSelectable" parameterType="string" resultType="mapInfo">
		select selectable_nodes selectableNodes from map_info_table where id=#{id}
	</select>
	
	<update id="updateGraphAndNodes" parameterType="mapInfo">
		update map_info_table set graph=#{graph}, nodes=#{nodes},selectable_nodes=#{selectableNodes} where id=#{id}
	</update>
	
	<delete id="deleteGraphAndNodes" parameterType="string">
		delete from map_info_table where id = #{id}
	</delete>
	
